int Solution::maximumGap(const vector<int> &A) {
    if(A.size()<=1)return 0;
    int i,j,n=A.size(),m=INT_MAX,ans=0;
    vector<pair<int,int>> p;
    for(i=0;i<n;i++){
        p.push_back(make_pair(A[i],i));
    }
    sort(p.begin(),p.end());
    for(i=0;i<=n-1;i++){
        m=min(p[i].second,m);
        ans=max(ans,p[i].second-m);
    }
    return ans;
}
